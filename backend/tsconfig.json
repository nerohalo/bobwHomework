{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./build",
    "baseUrl": "./",
    "incremental": true,
    "strict": true,
    "types": [
      "jest",
      "node"
    ],
    "paths": {
      "*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src",
    "node_modules/@types/jest/index.d.ts"
  ],
  "exclude": [
    "./node_modules/**/*",
  ]
}
